<body>
  <header>
    <div id="brand"><a href="index.html">
        <h2>PatatasWeb<span> Poemas</span></h2>
      </a></div>
    <nav>
      <ul>
        <li><a href="index.html">Inicio</a></li>
        <li><a href="curiosidades.html">Curiosidades</a></li>
        <li><a href="#">Contacto</a></li>
      </ul>
    </nav>
    <div id="hamburger-icon" onclick="toggleMobileMenu(this)">
      <div class="bar1"></div>
      <div class="bar2"></div>
      <div class="bar3"></div>
      <ul class="mobile-menu">
        <li><a href="index.html">Inicio</a></li>
        <li><a href="curiosidades.html">Curiosidades</a></li>
        <li><a href="#">Contacto</a></li>
      </ul>
    </div>
  </header>
  <div class="contenedor">
    <% if (poemas.length> 0) { %>
      <% poemas.forEach(poema=> { %>
        <div class="carta">
          <div class="titulo">
            <p>
              <%= poema.titulo %>
            </p>
          </div>

          <div class="texto">
            <%= poema.texto %>
          </div>
          <div class="autor">
            <p>Enviado por <span>
                <%= poema.autor %>
              </span></p>
          </div>

        </div>
        <% }) %>
          <% } %>
  </div>
  <a href="aporteplageable.html">
    <div class="botonflotante">
      <img src="./icons/note-svgrepo-com.svg" alt="">
    </div>
  </a>










